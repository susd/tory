<div class="row">
  <div class="medium12 columns">
    <h3>Listing Sites</h3>
    <p><%= link_to 'Add site', new_admin_site_path %></p>
    <table>
      <thead>
        <tr>
          <th>Code</th>
          <th>Abbr</th>
          <th>Name</th>
          <th>PXE</th>
          <th>Storage</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @sites.each do |site| %>
          <tr>
            <td><%= site.code %></td>
            <td><%= site.abbr.upcase %></td>
            <td><%= site.name %></td>
            <td><%= site.pxe %></td>
            <td><%= site.storage %></td>
            <td><%= link_to 'Edit', edit_admin_site_path(site) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
