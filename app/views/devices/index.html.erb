<div class="row">
  <div class="small-12 columns">
    <% if @site.present? %>
    <h2><%= @site.name %></h2>
    <% else %>
    <h2>All devices</h2>
    <% end %>
    
    <h4 class="subheader"><%= @device_count %> Total</h4>
  </div>
</div>



<div class="row">
  <div class="medium-10 columns">
    
    <%= render partial: 'list', locals: { devices: @devices } %>
    
    <div class="row">
      <div class="small-12 columns">
        <%= paginate @devices %>
      </div>
    </div>
    
  </div>
  <div class="medium-2 columns">
    <p><%= link_to 'Download CSV', params.merge(format: :csv) %></p>
    <%= render 'sites/nav' %>
  </div>
</div>